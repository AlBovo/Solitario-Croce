<Window x:Class="SolitarioCroce.GameLostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolitarioCroce"
        mc:Ignorable="d"
        Title="GameLostPage" Height="450" Width="800">
    <Grid Background="#FF146f50" Height="450" Width="800" >
        <Label Content="Hai perso :(" Margin="284,248,284,149" FontSize="33" FontFamily="Consolas" Foreground="#FFECECEC" FontWeight="Bold"/>
        <Button Content="Menu" FontSize="20" Height="37" Width="150" FontFamily="Consolas" FontWeight="Bold" FontStyle="Italic" Margin="325,362,325,51">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle Stroke="#FFECECEC" Margin="266,334,280,115"/>
        <Rectangle Margin="338,101,338,225">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/icons/give-up.png" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
