<Window x:Class="SolitarioCroce.Rules"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SolitarioCroce"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Rules">

    <Grid Background="#FF146f50">
        <wv2:WebView2 Name="iframe" HorizontalAlignment="Left" Width="400" DefaultBackgroundColor="#FF146f50"/>
        <Button Content="Menu" Panel.ZIndex="1" FontSize="20" HorizontalAlignment="Left" Margin="510,350,0,0" VerticalAlignment="Top" Height="40" Width="170" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
